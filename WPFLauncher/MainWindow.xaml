<Window x:Name="LauncherWindow" x:Class="WPFLauncher.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Atlas Launcher" Height="250" Width="400" ResizeMode="CanMinimize" WindowStyle="SingleBorderWindow"
        HorizontalAlignment="Stretch" Icon="/img/icon.ico">
    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="/img/home-bg.png" Stretch="UniformToFill"/>
        </Grid.Background>
        <Grid.RowDefinitions>
            <RowDefinition Height="2*"/>
            <RowDefinition Height="1*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>

            <ColumnDefinition Width="1*" />
            <ColumnDefinition Width="1.5*" />
            <ColumnDefinition Width="1.3*" />

        </Grid.ColumnDefinitions>
        <Button x:Name="PlayButton" Grid.Column="2" Grid.Row="1" Content="Play" HorizontalAlignment="Center" TextBlock.FontSize="18" TextBlock.FontWeight="bold"
                Margin="0,0,10,0" Width="120" Height="40" Click="playButton_Click" ClickMode="Release" IsDefault="True" Background="{x:Null}" Foreground="#FFFFDE00" />
        <TextBox x:Name="UsernameBox"  Grid.Column="2" Grid.Row="0" TextWrapping="Wrap" Foreground="White" CaretBrush="White" Height="25" TextBlock.FontSize="12" Width="100" Margin="0,-30,0,30"/>
        <Label x:Name="UsernameLabel" Grid.Column="1" Grid.Row="0" Content="Username" Foreground="White" Height="25" HorizontalAlignment="Right" TextBlock.FontSize="12" TextBlock.FontWeight="Bold" Margin="0,-30,0,30"/>
        <PasswordBox x:Name="PasswordBox" Grid.Column="2" Grid.Row="0" Foreground="White" CaretBrush="White" Height="25" Width="100" HorizontalAlignment="Center" TextBlock.FontSize="12" Margin="0,30,0,30"/>
        <Label x:Name="PasswordLabel" Grid.Column="1" Grid.Row="0" Content="Password" Foreground="White" Height="25" HorizontalAlignment="Right" TextBlock.FontSize="12" TextBlock.FontWeight="Bold" Margin="0,30,0,30"/>
        <ComboBox x:Name="QuickloginCombo" Grid.Column="2" Grid.Row="0" Foreground="White" Height="25" Width="100" HorizontalAlignment="Center" TextBlock.FontSize="12"  Margin="0,80,0,30"/>
        <Label x:Name="QuickloginLabel" Grid.Column="1" Grid.Row="0" Content="Quick Login" Foreground="White" Height="25" HorizontalAlignment="Right" TextBlock.FontSize="12" TextBlock.FontWeight="Bold" Margin="0,85,0,30"/>
    </Grid>
</Window>